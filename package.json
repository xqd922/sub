{
  "name": "sub",
  "version": "1.0.0",
  "private": true,
  "description": "订阅转换服务 - 支持 Clash、Sing-box 等代理客户端的订阅链接转换",
  "author": "",
  "license": "MIT",
  "packageManager": "bun@latest",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "subscription",
    "converter",
    "clash",
    "sing-box",
    "proxy",
    "vpn",
    "next.js"
  ],
  "scripts": {
    "dev": "next dev --turbo",
    "dev:fast": "next dev --turbo --no-lint --no-type-check",
    "build": "next build",
    "pages:build": "bun x @cloudflare/next-on-pages",
    "pages:deploy": "bun run build && bun run pages:build",
    "start": "next start",
    "lint": "next lint",
    "package": "bun scripts/package.js"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001743",
    "js-yaml": "^4.1.0",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1",
    "@eslint/eslintrc": "^3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8.5.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "next/typescript"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/prefer-const": "error",
      "@typescript-eslint/no-inferrable-types": "error",
      "prefer-const": "error",
      "no-var": "error",
      "no-console": ["warn", {
        "allow": ["warn", "error"]
      }],
      "no-debugger": "error",
      "no-alert": "warn",
      "eqeqeq": ["error", "always"],
      "curly": ["error", "all"],
      "no-duplicate-imports": "error",
      "no-unused-expressions": "error"
    }
  }
}
